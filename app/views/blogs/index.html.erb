
<h2>&nbsp</h2>
<%= notice %>
<div class="panel panel-default">
  <div class="panel-heading">記事一覧
  </div>
  <table class="table">
    <tr>
        <th>タイトル</td>
        <th>本文</th>
        <th>作成日</th>
    </tr>
    <% @blog.each do |blog| %>
      <tr>
          <td><%= blog.title %></td>
          <td><%= blog.content %></td>
          <td><%= blog.created_at.strftime("%Y年%m月%d日 %H:%M") %></td>
          <td><%= link_to "編集する", edit_blog_path(blog.id), class: 'btn btn-default' %></td>
          <td><%= link_to "削除する", blog_path(blog.id),
                  data: { confirm: "本当に削除してもよろしいですか？"},
                  method: :delete, class: 'btn btn-default' %>
          </td>
      </tr>
    <% end %>
  </table>
</div>

<div class="btn_new_article">
<%= link_to "新しく記事を作成", new_blog_path, class: 'btn btn-default' %>
</div>
